<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        
        <!-- Login -->
        <navigation-case>
            <from-action>#{loginMB.validaLogin}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/view/itens-conforto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginMB.validaLogin}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>

        <!-- Item de Conforto -->
        <navigation-case>
            <from-action>#{itemMB.excluir(item)}</from-action>
            <from-outcome>falha</from-outcome>
            <to-view-id>/view/itens-conforto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{itemMB.excluir(item)}</from-action>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/view/itens-conforto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{itemMB.inserir}</from-action>
            <from-outcome>falha</from-outcome>
            <to-view-id>/view/itens-conforto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{itemMB.inserir}</from-action>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/view/itens-conforto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <!-- Categoria de Quarto -->
        <navigation-case>
            <from-action>#{categoriaMB.excluir(categoria)}</from-action>
            <from-outcome>falha</from-outcome>
            <to-view-id>/view/categoria-quarto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{categoriaMB.excluir(categoria)}</from-action>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/view/categoria-quarto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{categoriaMB.inserir}</from-action>
            <from-outcome>falha</from-outcome>
            <to-view-id>/view/categoria-quarto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{categoriaMB.inserir}</from-action>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/view/categoria-quarto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <!-- Área de Serviço -->
        <navigation-case>
            <from-action>#{servicoAreaMB.excluir(servicoArea)}</from-action>
            <from-outcome>falha</from-outcome>
            <to-view-id>/view/servico-area.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{servicoAreaMB.excluir(servicoArea)}</from-action>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/view/servico-area.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{servicoAreaMB.inserir}</from-action>
            <from-outcome>falha</from-outcome>
            <to-view-id>/view/servico-area.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{servicoAreaMB.inserir}</from-action>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/view/servico-area.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
    </navigation-rule>
</faces-config>
